<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.ibametro.folhaponto.folhaponto.controller.CadastroFuncionarioController">
    <Text text="Cadastrar Novo Funcionário" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <TextField fx:id="nomeField" promptText="Digite o nome do funcionário" />
    <TextField fx:id="matriculaField" promptText="Digite a matrícula do funcionário" />
    <Button text="Salvar" onAction="#salvarFuncionario" />
</VBox>
